<scene version="3.0.0">
    <default name="spp" value="128"/>
    <default name="res" value="256"/>
    <default name="max_depth" value="6"/>

    <integrator type="depth"/>

    <sensor type="perspective">
        <float name="fov" value="50"/>
        <float name="near_clip" value="0.00000000000001"/>
        <transform name="to_world">
            <lookat origin="0, 0, -2"
                    target="0, 0, 1"
                    up    ="0, 1, 0"/>
        </transform>
        <sampler type="independent">  <!-- ldsampler -->
            <integer name="sample_count" value="1"/>
        </sampler>
        <film type="hdrfilm">
            <integer name="width" value="500"/>
            <integer name="height" value="500"/>
            <rfilter type="box"/>
        </film>
    </sensor>
    
    <shape type="obj">
        <string name="filename" value="object.obj"/>
    </shape>
</scene>
